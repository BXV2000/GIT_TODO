<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/css/todo.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>VINHZ TODO APP 4.0</title>
  </head>
  <body>
    <div class=todo_app_background>
      <div class="todo_app">
        <h1>Todo App</h1>
        <form action="/" method="post">
          <input
            class="input_todo"
            name="content"
            type="text"
            id="todo"
            placeholder="Write something..."
          />
          <button class="add_button">Add</button>
        </form>
      <% todos.forEach(function(todos){ %>
        <div class="todo_item">
          <div class="todo_item_left">
            <h2><%= todos.todo %></h2>
            <p><%= todos.status ? "undone" : "done" %></p>
          </div>
          <div class="todo_item_right">   
            <form action="/update" method="post">
              <button value="<%= todos.status %>" name="todoStatus"><%= todos.status ? "Done" : "Undone" %> </button>
              <input value="<%= todos.id%>" name="todoId" id="hiddenID"></input>
            </form>     
            <form action="/delete" method="post">
              <button value="<%= todos.id%>" name="todoId">X</button>
            </form>
          </div>
        </div>
      <% }); %>
      </div>
    </div>  
  </body>
</html>
